<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:PasswordManager.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PasswordManager.Desktop.Views.TodoItemCardView"
             x:DataType="viewModels:TodoItemCardViewModel">
    
    <!-- Bugs detected: When app closed from IDE, does not have data persistency -->
    
    <Grid ColumnDefinitions="300, Auto, *">
        
        <Grid Grid.Column="0" RowDefinitions="Auto, Auto">
            <TextBlock Grid.Row="0" FontWeight="Bold" FontSize="20" Grid.Column="0" Text="{Binding Title}"/>
            <TextBlock Grid.Row="1" FontStyle="Italic" Text="{Binding Username}"/>
        </Grid>
        
        <Button Grid.Column="1" Command="{Binding RemoveCommand}">
            <Image Source="avares://PasswordManager.Desktop/Assets/icons8-delete-64.png"
                   Width="24"
                   Height="24"></Image>
            
        </Button>
    </Grid>
</UserControl>
