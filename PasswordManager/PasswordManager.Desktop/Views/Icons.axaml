<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
            <Grid RowDefinitions="Auto, Auto">
                <Button Classes="LogoAcceptIcon" Grid.Row="0"></Button>
                <Button Classes="LogoDeleteIcon" Grid.Row="1"></Button>    
            </Grid>
            
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="Button.LogoAcceptIcon">
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                            <!-- <Image Source="{TemplateBinding Tag}"></Image> -->
                            <Svg Path="{DynamicResource AcceptIconData}"
                                      Width="24"
                                      Height="24"
                                      />
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              VerticalAlignment="Center"></ContentPresenter>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.LogoDeleteIcon">
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center">
                            <!-- <Image Source="{TemplateBinding Tag}"></Image> -->
                            <Image Height="24"
                                   Width="24">
                                <Image.Source>
                                    <SvgImage Source="{DynamicResource DeleteIconSvg}"></SvgImage>
                                </Image.Source>
                            </Image>
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              VerticalAlignment="Center"></ContentPresenter>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
</Styles>
