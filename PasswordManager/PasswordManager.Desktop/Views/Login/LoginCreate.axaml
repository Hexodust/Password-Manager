<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:PasswordManager.Desktop.ViewModels"
             x:Class="PasswordManager.Desktop.Views.Login.LoginCreate"
             x:DataType="vm:LoginDetailViewModel">
    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto">
        <Grid Grid.Row="0" ColumnDefinitions="Auto, *">
            <Image Grid.Column="0" Source="{Binding Icon}"/>
            <TextBox Grid.Column="1" Text="{Binding Title}">
                <!-- <TextBox.InnerRightContent> -->
                <!--     <Button Classes="LogoDeleteIcon"></Button> -->
                <!-- </TextBox.InnerRightContent> -->
            </TextBox>
        </Grid>
        
        <Grid Grid.Row="1" RowDefinitions="Auto, Auto">
            <StackPanel Grid.Row="0">
                <Label>username</Label>
                <TextBox Text="{Binding Username}"></TextBox>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="2" RowDefinitions="Auto, Auto">
            <StackPanel Grid.Row="0">
                <Label>password</Label>
                <TextBox Text="{Binding Passwords[0].Value}"></TextBox>
            </StackPanel>
        </Grid>
        
        <ItemsControl Grid.Row="3" ItemsSource="{Binding Websites}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Grid.Row="0">
                        <Label>website</Label>
                        <TextBox Text="{Binding}"></TextBox>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <Grid Grid.Row="4" RowDefinitions="Auto, Auto">
            <StackPanel Grid.Row="0">
                <Label>notes</Label>
                <TextBox Text="{Binding Notes}"></TextBox>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
