<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:PasswordManager.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PasswordManager.Desktop.Views.Login.LoginCard"
             x:DataType="viewModels:LoginCardViewModel">
    <Design.PreviewWith>
        <viewModels:LoginCardViewModel/>
        <Grid ColumnDefinitions="Auto, Auto">
            <Image Grid.Column="0" Source="{Binding Icon}" />
            <Grid Grid.Column="1" RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Content="{Binding Title}"/>
                <Label Grid.Row="1" Content="{Binding SubTitle}"/>
            </Grid>
        </Grid>
    </Design.PreviewWith>
    
    <Grid ColumnDefinitions="Auto, Auto">
        <Image Grid.Column="0" Source="{Binding Icon}" />
        <Grid Grid.Column="1" RowDefinitions="Auto, Auto">
            <Label Grid.Row="0" Content="{Binding Title}"/>
            <Label Grid.Row="1" Content="{Binding SubTitle}"/>
        </Grid>
    </Grid>
</UserControl>
